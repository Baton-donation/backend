{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Baton-donation/backend.git",
  "author": "Max Isom <hi@maxisom.me>",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "test": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --config ./test/jest-e2e.json --watch",
    "coverage": "jest --config ./test/jest-e2e.json --coverage",
    "lint": "xo",
    "lint-fix": "xo --fix",
    "makemigrations": "prisma migrate dev --preview-feature",
    "migrate": "prisma migrate deploy --preview-feature"
  },
  "dependencies": {
    "@nestjs/bull": "^0.3.1",
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.6.5",
    "@nestjs/platform-express": "^7.6.5",
    "@prisma/client": "^2.13.1",
    "bull": "^3.20.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "delay": "^4.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "make-dir": "^3.1.0",
    "ndjson": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "supertest": "^6.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.6",
    "@nestjs/testing": "^7.6.5",
    "@prisma/cli": "2.13.1",
    "@types/bull": "^3.14.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/ndjson": "^2.0.0",
    "@types/node": "^14.14.19",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "xo": "^0.37.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "xo --fix"
    ]
  },
  "xo": {
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptionPattern": "@*"
        }
      ],
      "import/extensions": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "unused-imports/no-unused-vars-ts": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
